# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /w3ab/assets/*file   controllers.Assets.at(path="/public", file)

# URL Lookup
GET     /w3ab/               controllers.Application.index()
GET     /w3ab/search/*url    controllers.Application.findMementosFor(url, archive?="")
GET     /w3ab/search         controllers.Application.queryMementos()
POST    /w3ab/search         controllers.Application.findMementos()

# Previous API - /bluebox/search.jsf?url=
GET     /bluebox/search.jsf     controllers.Application.findMementosRedirect(url)


# JSON versions
GET     /w3ab/api/timegraph/*url     controllers.Application.apiTimeGraph(url, archive?="")


# Screenshots of URLs
GET     /w3ab/api/screenshot/*url     controllers.Application.apiScreenshot(url)
