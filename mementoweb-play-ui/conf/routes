# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Tasks          
GET     /tasks                  controllers.Application.tasks()
POST    /tasks                  controllers.Application.newTask()
POST    /tasks/:id/delete       controllers.Application.deleteTask(id: Long)

# URL Lookup
GET     /mementos/*url          controllers.Application.findMementosFor(url)
GET     /mementos               controllers.Application.queryMementos()
POST    /mementos               controllers.Application.findMementos()

# JSON versions
GET     /api/timegraph/*url     controllers.Application.apiTimeGraph(url)
