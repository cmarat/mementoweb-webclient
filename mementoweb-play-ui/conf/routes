# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /bluebox/assets/*file   controllers.Assets.at(path="/public", file)

# Tasks          
GET     /tasks                  controllers.Application.tasks()
POST    /tasks                  controllers.Application.newTask()
POST    /tasks/:id/delete       controllers.Application.deleteTask(id: Long)

# URL Lookup
GET     /bluebox/               controllers.Application.index()
GET     /bluebox/search/*url    controllers.Application.findMementosFor(url)
GET     /bluebox/search         controllers.Application.queryMementos()
POST    /bluebox/search         controllers.Application.findMementos()

# JSON versions
GET     /bluebox/api/timegraph/*url     controllers.Application.apiTimeGraph(url)


# Screenshots of URLs
GET     /bluebox/api/screenshot/*url     controllers.Application.apiScreenshot(url)
